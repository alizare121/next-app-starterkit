{
  "name": "next-app-starterkit",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "tsc": "tsc",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "commit": "git-cz",
    "precommit": "yarn lint && yarn prettier",
    "prettier": "prettier --write ./**/*.{js,ts,tsx}",
    "pre-push": "git pull origin master && git pull origin stage && git pull origin develop || (echo 'Conflict detected. Please resolve manually.' && exit 1)"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.7",
    "next": "14.2.14",
    "react": "^18",
    "react-dom": "^18",
    "react-redux": "^9.1.2"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "commitizen": "^4.3.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.14",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "./**/*.{js,ts,tsx}": [
      "tsc-lint.sh",
      "yarn precommit",
      "git add"
    ]
  },
  "pre-push": "yarn pre-push",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
